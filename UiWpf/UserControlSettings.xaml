                </Button>
                <TextBox x:Name="txtNmmMod" Margin="3" >C:\Users\anderson_paschoalon\Workspace\Sandbox\OpenSource\Cs\SkyrimSteamProfileManager</TextBox>
            </StackPanel>

            
            <Button x:Name="saveConfig" Grid.Column="0" 
                    Width="150" Height="30"  
                    Margin="5,5,5,5" Click="saveConfig_Click"
                    BorderBrush="{x:Null}"
                    Content="Incluir" ></Button>
        </StackPanel>        
    </Grid>
</UserControl>
