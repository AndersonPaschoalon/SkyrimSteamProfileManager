                <TextBox x:Name="txtDocs" Margin="3" >C:\Users\anderson_paschoalon\Workspace\Sandbox\OpenSource\Cs\SkyrimSteamProfileManager</TextBox>
            </StackPanel>


            <TextBlock x:Name="lblAppdir" Margin="3" Text="Appdir Folder" FontWeight="Bold"></TextBlock>
