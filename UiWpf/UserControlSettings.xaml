                    <materialDesign:PackIcon Grid.Column="0" Kind="FolderSearchOutline" Width="20" Height="20" Margin="0 0 0 0" HorizontalAlignment="Left"  />
                </Button>
                <TextBox x:Name="txtNmmInfo" Margin="3" >C:\Users\anderson_paschoalon\Workspace\Sandbox\OpenSource\Cs\SkyrimSteamProfileManager</TextBox>
            </StackPanel>


            <TextBlock x:Name="lblNmmMod" Margin="3" Text="NmmMod Folder" FontWeight="Bold"></TextBlock>
