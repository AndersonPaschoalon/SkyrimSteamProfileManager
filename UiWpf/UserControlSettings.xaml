        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="1" Grid.Column="1" >

            <TextBlock x:Name="lblSteam" Margin="3" Text="Steamm\Commons Folder" FontWeight="Bold"></TextBlock>
